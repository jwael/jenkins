package com.arval.blm.core.domain.exception

import org.junit.jupiter.api.Assertions.assertEquals
import org.junit.jupiter.api.Assertions.assertNull
import org.junit.jupiter.api.DisplayName
import org.junit.jupiter.api.Test

class NotFoundExceptionTest {

    @Test
    @DisplayName("it should store the message when only message is provided")
    fun shouldStoreMessage() {
        // GIVEN
        val message = "Resource not found"

        // WHEN
        val exception = NotFoundException(message)

        // THEN
        assertEquals(message, exception.message)
        assertNull(exception.cause)
    }

    @Test
    @DisplayName("it should store both message and cause when provided")
    fun shouldStoreMessageAndCause() {
        // GIVEN
        val message = "Customer not found"
        val cause = IllegalArgumentException("Invalid customer ID")

        // WHEN
        val exception = NotFoundException(message, cause)

        // THEN
        assertEquals(message, exception.message)
        assertEquals(cause, exception.cause)
    }
}